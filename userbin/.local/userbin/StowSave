#!/usr/bin/env sh
set -eu

if [ $# -lt 1 ]; then
  echo "usage: StowSave <commit message>" >&2
  exit 1
fi

MSG="$*"
REPO_DIR="/Users/npiv/code/dotfiles"
PACKAGES="bash nvim alacritty zellij tmux wezterm claude userbin"

cd "$REPO_DIR"

stow -v -t ~ $PACKAGES

git add -A
git commit -m "$MSG"
git push origin main
