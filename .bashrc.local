# bare git strategy for dotfiles https://news.ycombinator.com/item?id=11070797
#
# INIT
#  git init --bare $HOME/.myconf
#  alias config='/usr/bin/git --git-dir=$HOME/.myconf/ --work-tree=$HOME'
#  config config status.showUntrackedFiles no
#
# LOAD
#  git clone --separate-git-dir=~/.myconf git@github.com:npiv/dotfiles.git ~
alias config='/usr/bin/git --git-dir=$HOME/.myconf/ --work-tree=$HOME'
